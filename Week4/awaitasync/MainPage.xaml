<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AwaitAsyncApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="lblupd" Text="I am a Label" FontSize="30"/>

            <Button
                x:Name="SyncBtn"
                Text="Sync"
                Clicked="SyncBtn_Clicked"
                 />

            <Button x:Name="ASyncBtn"
                    Text="Async Btn"
                    Clicked="ASyncBtn_Clicked"
                    />

            <Entry Placeholder="Try Typing"/>

            <Button Text="PopUp" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
