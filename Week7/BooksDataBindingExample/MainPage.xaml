<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindingLecture.MainPage"
             Title="Data Binding Examples"
             xmlns:local="clr-namespace:DataBindingLecture">
             
    <ScrollView>
    <StackLayout Padding="20">
        <Label Text="Book List" FontSize="Large" HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Books}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold" />
                        <Label Text="{Binding Author}" FontSize="Small" />
                        <Label Text="{Binding PublishedYear}" FontSize="Small" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout>
            <Entry x:Name="title" Placeholder="Title" WidthRequest="100"/>
            <Entry x:Name="author" Placeholder="Author" WidthRequest="100"/>
            <Entry x:Name="publishedyear" Placeholder="Published Year" WidthRequest="100"/>

        </HorizontalStackLayout>
        <Button Clicked="Button_Clicked"  Text="Add Book" HorizontalOptions="Start"/>
    </StackLayout>
    </ScrollView>
</ContentPage>
